  "designSpecification": {
    "layoutArchitecture": {
      "name": "AI Operations Center",
      "description": "Three-zone layout: Command Bar (top), Priority Queue (main), Intelligence Panel (slide-over)",
      "zones": [
        {
          "name": "Command Bar",
          "position": "top fixed",
          "height": "auto (responsive)",
          "components": ["RiskSummaryBadges", "QuickFilters", "SearchBar", "RefreshButton"],
          "purpose": "At-a-glance health status, instant filtering"
        },
        {
          "name": "Priority Queue",
          "position": "main scrollable",
          "components": ["ShipmentIntelligenceCard[]"],
          "purpose": "Exception-first list of shipments, grouped by risk when filtered to 'All'",
          "layout": "Vertical card stack, critical shipments always first"
        },
        {
          "name": "Intelligence Panel",
          "position": "right slide-over (Sheet)",
          "width": "480px desktop, full-width mobile",
          "components": ["ShipmentDeepDive", "EscalationList", "IssueList", "UrgentMessages", "ActionQueue"],
          "purpose": "Deep dive into a single shipment without losing list context"
        }
      ]
    },

    "designOptions": {
      "recommended": {
        "name": "Option A: Priority Queue with Intelligence Cards",
        "description": "Exception-based vertical list with rich intelligence cards. Each card shows narrative prominently, blockers in red, next actions in amber. Click to expand into deep-dive panel.",
        "rationale": "Best for operations teams scanning for problems. Matches Flexport insight: 'I only want to see a shipment if it's bleeding'",
        "wireframe": "See wireframes section below"
      },
      "alternative1": {
        "name": "Option B: Risk Swimlane Kanban",
        "description": "Three columns: Critical | Warning | On Track. Drag shipments between lanes to manually adjust risk. Cards show key insight + blocker.",
        "rationale": "Good for teams that want visual organization by risk. More manual control.",
        "tradeoff": "Less information density, requires horizontal scrolling on mobile"
      },
      "alternative2": {
        "name": "Option C: Dashboard + Table Hybrid",
        "description": "KPI cards at top (critical count, total financial impact, overdue actions), then condensed table below with risk indicator column.",
        "rationale": "Familiar table pattern but with intelligence summary at top",
        "tradeoff": "Still buries individual shipment intelligence in table rows"
      }
    },

